{
  "debug.allowBreakpointsEverywhere": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.accessibilitySupport": "off",
  "editor.detectIndentation": false,
  "editor.fontFamily": "'Fira Code'",
  "editor.fontWeight": "400",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modifications",
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.largeFileOptimizations": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80],
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 2,
  "files.associations": {
    "**/*.cshtml": "aspnetcorerazor"
  },
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": false
  },
  "files.insertFinalNewline": true,
  "git.allowForcePush": true,
  "git.autofetch": true,
  "git.autoStash": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "git.path": "/opt/homebrew/bin/git",
  "scm.showChangesSummary": false,
  "scm.showIncomingChanges": "never",
  "scm.showOutgoingChanges": "never",
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.scrollback": 5000,
  "update.mode": "manual",
  "workbench.colorCustomizations": {
    "editorInfo.foreground": "#5960c3"
  },
  "workbench.colorTheme": "Default Dark+",
  "workbench.hover.delay": 1000,
  "workbench.editor.customLabels.patterns": {
    "**/index.ts": "${dirname}/index.ts",
    "**/index.tsx": "${dirname}/index.tsx",
    "**/index.test.ts": "${dirname}/index.test.ts",
    "**/app/**/index.tsx": "${dirname}/index.tsx",
    // Next JS
    "**/app/**/page.tsx": "${dirname}/page.tsx",
    "**/app/**/layout.tsx": "${dirname}/layout.tsx",
    "**/app/**/template.tsx": "${dirname}/template.tsx"
  },
  "workbench.editorAssociations": {
    "*.ICN": "hexEditor.hexedit",
    "*.hex": "hexEditor.hexedit"
  },
  "workbench.sideBar.location": "right",
  "search.exclude": {
    "**/.git": true
  },

  // Web
  "debug.javascript.autoAttachFilter": "disabled",
  "deno.path": "/opt/homebrew/bin/deno",
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "prettify-ts.enableHover": false,
  "prettify-ts.viewNestedTypes": false,
  "tailwindCSS.includeLanguages": {
    "typescriptreact": "html"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
    // "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "[mdx]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  "[scss]": {
    "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter",
    "editor.suggest.insertMode": "replace"
  },
  // CSharp
  "[csharp]": {
    "editor.tabSize": 4
  },
  // Rust
  "rust-analyzer.rustfmt.extraArgs": ["--config", "tab_spaces=2"],
  "[rust]": {
    "editor.tabSize": 2
  },
  // Misc extensions
  "colorize.languages": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "source.css.styled"
  ],
  "git-graph.dialog.merge.noFastForward": false,
  "hexeditor.columnWidth": 16,
  "hexeditor.defaultEndianness": "little",
  "hexeditor.inspectorType": "aside",
  "hexeditor.showDecodedText": true,
  "omnisharp.organizeImportsOnFormat": true,
  "powermode.enabled": true,
  "powermode.combo.location": "off",
  "powermode.presets": "clippy",
  "powermode.shake.intensity": 0,
  "redhat.telemetry.enabled": true,
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "foreground": "#1d1d1d",
      "background": "#effa75",
      "iconColour": "#effa75"
    }
  },
  "cSpell.userWords": [
    "alfonz",
    "appinfo",
    "autodrain",
    "autozip",
    "brightsign",
    "bslint",
    "Buildtime",
    "chromeos",
    "codestyle",
    "CONSOLEJS",
    "dataurl",
    "esbuild",
    "escheck",
    "healthcheck",
    "Homol√≠k",
    "iife",
    "jsapi",
    "localstorage",
    "minio",
    "nodenext",
    "nodeserver",
    "outdir",
    "SCAP",
    "SERVLET",
    "signageos",
    "signageoslandscape",
    "spyable",
    "sssp",
    "svgr",
    "Tizen",
    "userconfig",
    "webos"
  ],
  // Unsorted
}
